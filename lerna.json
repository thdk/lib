{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": ["packages/*"],
  "npmClient": "pnpm",
  "ignoreChanges": ["*.md", ".*"],
  "conventionalCommits": true,
  "access": "public",
  "changelog": true,
  "command": {
    "version": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    },
    "create": {
      "license": "MIT",
      "private": false,
      "access": "public"
    }
  },
  "createRelease": "github"
}
