{
  "name": "@tutods/lib",
  "private": true,
  "license": "MIT",
  "description": "ESLint configuration used in all my projects",
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/tutods/lib",
  "scripts": {
    "format": "prettier --write ./packages",
    "preversion:stable": "lerna version --conventional-commits --conventional-graduate --yes --message \"chore(stable version): publish\"",
    "version:stable": "lerna publish from-git --yes",
    "preversion:beta": "lerna version --conventional-commits --conventional-prerelease --preid beta --yes --message \"chore(beta version): publish\"",
    "version:beta": "lerna publish from-git --yes"
  },
  "devDependencies": {
    "lerna": "^7.1.4",
    "prettier": "^3.0.0"
  }
}
