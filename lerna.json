{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "ignoreChanges": [
    "*.md",
    ".*",
    "commitlint.config.js"
  ],
  "registry": "https://npm.pkg.github.com/tutods",
  "conventionalCommits": true,
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com/tutods"
    }
  }
}
