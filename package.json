{
  "name": "@tutods/lib",
  "private": true,
  "license": "MIT",
  "description": "ESLint configuration used in all my projects",
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/tutods/lib",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write ./packages **/*.md **/*.json",
    "lint": "eslint --ext .js --ignore-path .gitignore",
    "preversion:stable": "lerna version --conventional-commits --conventional-graduate --yes --message \"chore(stable version): publish\"",
    "version:stable": "lerna publish from-git --yes",
    "preversion:beta": "lerna version --conventional-commits --conventional-prerelease --preid beta --yes --message \"chore(beta version): publish\"",
    "version:beta": "lerna publish from-git --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@tutods/eslint-config": "./packages/eslint-config",
    "@tutods/prettier-config": "./packages/prettier-config",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.4",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ignore-path .gitignore --fix"
    ],
    "*.{md,mdx,json,html,css,scss,sass,less}": [
      "prettier --write"
    ]
  }
}
