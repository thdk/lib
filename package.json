{
  "name": "@tutods/lib",
  "private": true,
  "license": "MIT",
  "description": "ESLint configuration used in all my projects",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write ./packages",
    "pre:version:stable": "lerna version --conventional-commits yes --message \"chore(stable version): publish\"",
    "version:stable": "lerna publish from-git --no-private --no-verify-access -no-verify-registry --yes",
    "pre:version:beta": "lerna version --conventional-commits yes --message \"chore(beta version): publish\"",
    "version:beta": "lerna publish from-git --no-private --canary --no-verify-access --no-verify-registry"
  },
  "devDependencies": {
    "lerna": "^7.1.4",
    "prettier": "^3.0.0"
  }
}
