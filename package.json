{
  "name": "@tutods/lib",
  "private": true,
  "license": "MIT",
  "description": "Monorepo to store my ESLint and Prettier configs.",
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/tutods/lib",
  "engineStrict": true,
  "engines": {
    "node": ">=18.x.x",
    "npm": "please-use-yarn",
    "yarn": ">=1.x.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "format": "prettier --write ./packages **/*.md **/*.json",
    "lint": "eslint --ext .js --ignore-path .gitignore",
    "preversion:stable": "lerna version --conventional-graduate --yes",
    "version:stable": "lerna publish from-git --yes",
    "preversion:beta": "lerna version --conventional-prerelease --preid beta --yes",
    "version:beta": "lerna publish from-git --canary --yes"
  },
  "devDependencies": {
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "global": "^4.4.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.4",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ignore-path .gitignore --fix"
    ],
    "*.{md,mdx,json,html,css,scss,sass,less}": [
      "prettier --write"
    ]
  }
}
