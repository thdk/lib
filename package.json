{
  "name": "@tutods/lib",
  "private": true,
  "license": "MIT",
  "description": "ESLint configuration used in all my projects",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tutods/lib.git"
  },
  "scripts": {
    "format": "prettier --write ./packages",
    "pre:version:stable": "lerna version --conventional-commits --include-merged-tags --conventional-draduate --message \"chore(stable version): publish\"",
    "version:stable": "lerna publish --no-private -no-verify-registry --yes",
    "pre:version:beta": "lerna version --conventional-commits --message \"chore(beta version): publish\"",
    "version:beta": "lerna publish --no-private --canary --no-verify-registry"
  },
  "devDependencies": {
    "lerna": "^7.1.4",
    "lerna-changelog": "^2.2.0",
    "prettier": "^3.0.0"
  },
  "changelog": {
    "labels": {
      "feature": "New Feature",
      "bug": "Bug Fix",
      "refactor": "Refactor",
      "chore": "Minor Changes"
    }
  }
}
